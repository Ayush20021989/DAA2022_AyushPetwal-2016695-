//PROGRAM TO IMPLEMENT BUBBLE SORT AND FIND OUT TOTAL NUMBER OF COMPARISONS
#include<stdio.h>
#define MAX 50
int main()
{
    int arr[MAX],n,count=0;
    printf("Enter number of elements:");
    scanf("%d",&n);
    printf("Enter %d elements of the array:\n",n);
    for(int i=0;i<n;i++)
    {
        scanf("%d",&arr[i]);
    }
    printf("Unsorted array is:\n");
    for(int i=0;i<n;i++)
    {
        printf("%d ",arr[i]);
    }
    for(int i=0;i<n-1;i++)
    {
        for(int j=0;j<n-i-1;j++)
        {
            if (arr[j]>arr[j+1])
            {
                count++;
                int temp=arr[j];
                arr[j]=arr[j+1];
                arr[j+1]=temp;
            }
        }
    }
    printf("\nSorted array is:\n");
    for(int i=0;i<n;i++)
    {
        printf("%d ",arr[i]);
    }
    printf("\nTotal comparisons were: %d",count);
    
}
